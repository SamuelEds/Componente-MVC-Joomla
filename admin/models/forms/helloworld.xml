<?xml version="1.0" encoding="UTF-8"?>
<!--INICIALIZAR O ARQUIVO XML-->

<!--UMA OBSERVAÇÃO QUE EQUIVALE PARA TODOS OS CAMPOS (FIELDS). NO ATRIBUTO 'name', É PRECISO QUE O VALOR SEJA O MESMO NOME DO REFERIDO CAMPO NA TABELA DO BANCO DE DADOS. POR EXEMPLO, PARA UM CAMPO COM O 'name' 'mensagens', NA TABELA DO BANCO É PRECISO QUE HAJA UM CAMPO COM O NOME 'mensagens'.-->

<!--CRIAR O FORMULÁRIO-->
<!--NOTE O ATRIBUTO 'addrulepath' QUE IRÁ ADICIONAR UMA REGRA DE FORMULÁRIO. FUNCIONA COM A MESMA LÓGICA DO 'addfieldpath'-->
<form addrulepath="/administrator/components/com_helloworld/models/rules">
	
	<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
	<fieldset
		name="details"
		label="COM_HELLOWORLD_HELLOWORLD_DETAILS">

		<!--CAMPO IR DO FORMULÁRIO (ELE É ESCONDIDO). SERVE PARA INFORMAR O ID OBTIDO AUTOMATICAMENTE.-->
		<field 
			name="id"
			type="hidden"/>

		<!--CAMPO PARA INSERIR UMA NOVA MENSAGEM DE TEXTO-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<!--NO ATRIBUTO 'Name' DEVE-SE INFORMAR O MESMO NOME QUE ESTÁ NO BANCO DE DADOS.-->
		<!--NOTE A CLASSE DO CAMPO QUE SERÁ UMA IDENTIFICAÇÃO PARA FAZER A VALIDAÇÃO. A NOMENCLATURA DEVE SER 'validate-<nome_do_campo>'-->
		<!--NOTE O ATRIBUTO 'required' QUE FARÁ COM QUE O CAMPO SEJA PREENCHIDO OBRIGATORIAMENTE E QUE DEVE SER VERIFICADO POR UM MANIPULADOR DA ESTRUTURA DO VALIDADOR DE FORMULÁRIOS DO JOOMLA.-->
		<!--O ATRIBUTO 'validate' IRÁ ESPECIFICAR QUAL É O ARQUIVO PHP QUE FARÁ A VALIDAÇÃO NO LADO DO SERVIDOR. NESSE CASO SERÁ O ARQUIVO 'texto.php'.-->
		<field 
			name="texto"
			type="text"
			label="COM_HELLOWORLD_GREETING_LABEL"
			description="COM_HELLOWORLD_GREETING_DESC"
			size="40"
			class="inputbox validate-texto"
			validate="texto"
			required="true"
			default=""/>

		<!--ADICIONAR CAMPO PARA INFORMAR O ALIAS.-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES PADRÃO DO JOOMLA QUE SERÃO TRADUZIDAS AUTOMATICAMENTE.-->
		<!--OBSERVE TAMBÉM O ATRIBUTO 'hint' QUE EQUIVALE A UM PLACEHOLDER DE UM INPUT.-->
		<field 
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40"/>

		<!--CRIAR UM CAMPO PARA GERENCIAR AS CATEGORIAS DO COMPONENTE.-->
		<!--OBSERVE O ATRIBUTO 'type' QUE FAZ COM QUE O CAMPO SEJA RECONHECIDO COMO CATEGORIA.-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<!--NOTE TAMBÉM O ATRIBUTO 'extension' QUE DIZ QUAL EXTENSÃO O CAMPO DEVE INTERAGIR.-->
		<field 
			name="catid"
			type="category"
			extension="com_helloworld"
			class="inputbox"
			default=""
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_CATID_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_CATID_DESC"
			required="true">
			
			<!--AS CATEGORIAS COMPORTAM-SE DE MANEIRA SELETIVA, LOGO É NECESSÁRIO A TAG OPTION. AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA.-->
			<!--OBSERVE O ATRIBUTO 'value' RECEBENDO O VALOR 0, QUE REPRESENTA 'Nenhuma Categoria'.-->
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>

		<!--CAMPO PARA INFORMAR A LATITUDE.-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<!--OBSERVE QUE COM UM CAMPO COM UM 'type="number"', É POSSÍVEL MANIPULAR O VALOR MÁXIMO E O VALOR MÍNIMO COM OS ATRIBUTOS 'min' E 'max'-->
		<field
			name="latitude"
			type="number"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_LATITUDE_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_LATITUDE_DESC"
			min="-90.0"
			max="90.0"
			class="inputbox"
			required="true"
			default="0.0" />

		<!--CAMPO PARA INFORMAR A LOGINTUDE.-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<!--OBSERVE QUE COM UM CAMPO COM UM 'type="number"', É POSSÍVEL MANIPULAR O VALOR MÁXIMO E O VALOR MÍNIMO COM OS ATRIBUTOS 'min' E 'max'-->
		<field 
			name="longitude"
			type="number"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_LONGITUDE_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_LONGITUDE_DESC"
			min="-180.0"
			max="180.0"
			class="inputbox"
			required="true"
			default="0.0"/>

		<!--CAMPO PARA ESCOLHER O IDIOMA-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO. AS PALAVRAS EM MAIÚSCULAS QUE COMEÇAM COM "J" SERÃO TRADUZIDAS AUTOMATICAMENTE PELO ARQUIVO DE TRADUÇÃO.-->
		<!--OBSERVE O ATRIBUTO 'type' COM O VALUE 'contentlanguage', FAZENDO COM QUE O JOOMLA IDENTIFIQUE ESTE CAMPO COMO SELETOR DE IDIOMAS E FARÁ AS MODIFICAÇÕES PADRÃO PARA QUE ELE FUNCIONE COMO UM.-->
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_LANGUAGE_DESC">

			<!--A PLAVRA EM MAIÚSCULA SERÁ TRADUZIDA PELO JOOMLA AUTOMATICAMENTE COMO 'Tudo'.-->
			<!--OBSERVE QUE O ATRIBUTO 'value' TEM COMO VALOR O '*' INDICIANDO UM VALOR PADRÃO COMO 'Todos'.-->
			<option value="*">JALL</option>
		
		</field>

		<!--CAMPO PARA OBTER UM PARÂMETRO JFORM['parent_id'] QUE AO SER RECOLHIDO NO MÉTODO POST, ELE FARÁ O MAPEAMENTO PARA O CAMPO 'parent_id' DO REGISTRO.-->
		<!--OBSERVE O ATRIBUTO 'type' COM VALUE 'helloworldparent' INDICANDO UM TIPO DE CAMPO PERSONALIZÁVEL.-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<field
			name="parent_id"
			type="helloworldparent"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_PARENT_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_PARENT_DESC"
			default="1"
			filter="int">
			
		</field>

		<!--ESTE CAMPO RESULTARÁ EM UM PARÂMETRO HTT POST JFORM['helloworldordering'] CONTENDO O ID DO IRMÃO ABAIXO DO QUAL ESTE REGISTRO DEVE SER COLOCADO OU UM VALOR ESPECIAL DE -1 (PARA DEFINI-LO COMO PRIMEIRO FILHO) OU -2 (PARA DEFINI-LO COMO ÚLTIMO FILHO). SERÁ USADO PARA POSICIONAR A LOCALIZAÇÃO DO REGISTRO EDITADO.-->
		<!--OBSERVE O ATRIBUTO 'type' COM O VALUE 'helloworldordering' INDICANDO SER UM CAMPO PERSONALIZÁVEL.-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<field
			name="helloworldordering"
			type="helloworldordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			filter="int"
			size="1">
		</field>

		<!--CAMPO PARA NOTAS DE VERSÃO.-->
		<!--AS LETRAS EM MAIÚSCULAS SERÃO TRADUZIDAS AUTOMATICAMENTE PELO JOOMLA.-->
		<!--OBS: É OBRIGATÓRIO QUE O VALUE DO ATRIBUTO 'name' SEJA 'version_note'.-->
		<field
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
			labelClass="control-label">
		</field>

	</fieldset>

	<!--CAMPO PARA INFORMAR A DESCRIÇÃO DA VERSÃO.-->
	<!--OBSERVE O ATRIBUTO 'type' COM O VALUE 'editor', SIGNIFICANDO QUE SERÁ EXIBIDO O EDITOR PADRÃO DO JOOMLA PARA INSERÇÃO DE DETALHES. NESSE CASO SERÁ EXIBIDO O EDITOR 'TinyMCE'-->
	<!--AS PALAVRAS EM MAIÚSCULAS SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
	<field
		name="description"
		type="editor"
		label="COM_HELLOWORLD_HELLOWORLD_FIELD_DESCRIPTION_LABEL"
		description="COM_HELLOWORLD_HELLOWORLD_FIELD_DESCRIPTION_DESC"
		filter="JComponent::filterText"
		buttons="true" />

	<!--GRUPO DE CAMPOS PARA INSERÇÃO DAS IMAGENS E SEUS DADOS.-->
	<fields
		name="imageinfo">
		
		<!--GRUPO SENDO IDENTIFICADO COMO 'image-info' DE ACORDO COM O ATRIBUTO 'name'-->
		<!--AS CATEGORIAS COMPORTAM-SE DE MANEIRA SELETIVA, LOGO É NECESSÁRIO A TAG OPTION. AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA.-->
		<fieldset
			name="image-info"
			label="COM_HELLOWORLD_IMAGE_FIELDS">
			
			<!--CAMPO COM A FUNCIONALIDADE DE INSERIR UMA IMAGEM.-->
			<!--NOTE O ATRIBUTO 'type' COM O VALOR 'media' QUE FAZ COM QUE O CAMPO TENHA A FUNCIONALIDADE DE INSERÇÃO DE ARQUIVO.-->
			<!--AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA.-->
			<!--OBSERVE QUE NO ATRIBUTO NAME TEM O VALOR 'imagem' QUE PRECISA SER O MESMO NOME DO CAMPO NA TABELA DO BANCO DE DADOS.-->
			<field 
				name="imagem"
				type="media"
				preview="tooltip"
				label="COM_HELLOWORLD_HELLOWORLD_FIELD_IMAGE_LABEL"
				description="COM_HELLOWORLD_HELLOWORLD_FIELD_IMAGE_DESC" />

			<!--CAMPO QUE SERÁ PREENCHIDO PELO TEXTO ALTERNATIVO QUANDO O NAVGADOR NÃO CONSEGUIR EXIBIR A IMAGEM-->
			<!--AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA.-->
			<field 
				name="alt"
				type="text"
				label="COM_HELLOWORLD_HELLOWORLD_FIELD_ALT_LABEL"
				description="COM_HELLOWORLD_HELLOWORLD_FIELD_ALT_DESC"
				size="30"/>

			<!--CAMPO QUE SERÁ PREENCHIDO PELO CAPTION DA IMAGEM-->
			<!--AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA.-->
			<field 
				name="caption"
				type="text"
				label="COM_HELLOWORLD_HELLOWORLD_FIELD_CAPTION_LABEL"
				description="COM_HELLOWORLD_HELLOWORLD_CAPTION_DESC"
				size="30"/>

		</fieldset>

	</fields>

	<!--DEFININDO OS PARÂMETROS DE CONFIGURAÇÃO COMO PADRÃO-->
	<fields name="params">
		
		<!--AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA-->
		<!--NOTE O ATRIBUTO 'name' COM O VALOR 'params', ELE PRECISA SER O MESMO VALOR QUE FOI DEFINIDO NO FIELDSET NO ARQUIVO 'config.xml' PARA QUE ACONTEÇA A PADRONIZAÇÃO.-->
		<fieldset 
		name="params"
		label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
			
			<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
			<field
				name="show_category"
				type="list"
				label="COM_HELLOWORLD_HELLOWORLD_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_HELLOWORLD_HELLOWORLD_FIELD_SHOW_CATEGORY_DESC"
				default="">
				
				<!--AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELA SERÁ TRADUZIDA AUTOMATICAMENTE PELO JOOMLA-->
				<!--AQUI MOSTRARÁ A CONFIGURAÇÃO ESTABELECIDA GLOBALMENTE. (O QUE FOI CONFIGURADO NAS OPÇÕES).-->
				<option value="">JGLOBAL_USE_GLOBAL</option>

				<!--OPÇÃO DE ESCONDER.-->
				<option value="0">JHIDE</option>

				<!--OPÇÃO DE MOSTRAR.-->
				<option value="1">JSHOW</option>

			</field>
		</fieldset>
	</fields>

	<!--MOSTRANDO A CONFIGURAÇÃO DE PERMISSÕES NO NÍVEL DE ITEM.-->
	<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
	<!--NOTE O ATRIBUTO 'name' COM O VALOR 'accesscontrol', SIGNIFICANDO QUE ESTE CAMPO SERÁ CONFIGURADO DE ACORDO COM O CONTORLE DE ACESSO PADRÃO DO JOOMLA.-->
	<fieldset
		name="accesscontrol"
		label="COM_HELLOWORLD_FIELDSET_RULES">

		<field 
			name="asset_id"
			type="hidden"
			filter="unset"/>

		<!--ESTE CAMPO IRÁ INFORMAR AS REGRAS.-->
		<!--NOTE OS ATRIBUTOS 'name', 'type', 'filter', 'validate' COM O VALOR 'rules', SIGNIFICANDO QUE ELES SERÃO CONFIGURADOS DE ACORDO COM CONTROLE DE ACESSO PADRÃO DEFINIDO PELO JOOMLA.-->
		<!--NOTE TAMBÉM O ATRIBUTO 'section' COM O VALOR 'message', ELE ESTÁ ESPECIFICANDO QUAL É A SECTION COM QUE ELE TEM QUE TRABALHAR, AS SECTIONS SÃO DEFINIDAS NO ARQUIVO 'config.xml'.-->
		<field 
			name="rules"
			type="rules"
			label="COM_HELLOWORLD_FIELD_RULES_LABEL"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_helloworld"
			section="message"/>
		
	</fieldset>

</form>
