<?xml version="1.0" encoding="UTF-8"?>

<config>
	
	<fieldset
		name="textos"
		label="COM_HELLOWORLD_CONFIG_TEXTO_SETTINGS_LABEL"
		description="COM_HELLOWORLD_CONFIG_TEXTO_SETTINGS_DESC"
		>

		<field
			name="show_category"
			type="radio"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_SHOW_CATEGORY_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_SHOW_CATEGORY_DESC"
			default="0">
			
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>

		</field>
	</fieldset>

	<!--AQUI SERÁ O CAMPO PARA CONFIGURAÇÃO DO ACL.-->
	<!--OBSERVE O ATRIBUTO 'name' COM O VALOR 'permissions', SIGNIFICANDO QUE ESTE FIELDSET ESTÁ RECEBENDO VALORES DE CONFIGURAÇÃO DO ACL DO JOOMLA.-->
	<!--AS LETRAS EM MAIÚSCULAS SÃO CONSTANTES PADRÃO DO JOOMLA, ELAS SERÃO TRADUZIDAS AUTOMATICAMENTE PELO JOOMLA.-->
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		
		<!--CAMPO PARA CONFIGURAÇÃO DA ACL-->
		<!--NOTE OS ATRIBUTOS 'type', 'name', 'validate', 'filter' QUE RECEBEM O VALOR 'rules', SIGNIFICANDO QUE ELES FICARÃO CONFIGURADOS PELO PADRÃO QUE O JOOMLA ESTABELECER PARA ESSE VALOR.-->
		<field 
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_helloworld"
			section="component"
			/>

	</fieldset>

</config>
