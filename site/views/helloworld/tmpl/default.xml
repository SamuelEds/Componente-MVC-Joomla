<?xml version="1.0" encoding="UTF-8"?>
<!--INICIALIZAR O ARQUIVO XML-->

<!--ARQUIVO QUE SERÁ RESPONSÁVEL POR CRIAR UM TIPO DE ITEM DE MENU PARA A VIEW 'HelloWorld'-->

<!--INDICAR UM TIPO ESPECÍFICO DE DADOS-->
<metadata>
	
	<!--CRIAR UM LAYOUT-->
	<!--INFORMAR O TÍTULO POR MEIO DO ATRIBUTO 'title'-->
	<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
	<layout title="COM_HELLOWORLD_HELLOWORLD_VIEW_DEFAULT_TITLE">

		<!--CRIAR UMA DESCRIÇÃO DO COMPORTAMENTO DA VIEW-->
		<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
		<message>COM_HELLOWORLD_HELLOWORLD_VIEW_DEFAULT_DESC</message>
	</layout>

	<!--ADICIONANDO UMA SOLICITAÇÃO DE VARIÁVEL-->
	<!--OBS: É PRECISO QUE EXISTA O ATRIBUTO 'name' COM O VALUE 'request' PARA QUE A SOLICITAÇÃO FUNCIONE.-->
	<!--OBSERVE O ATRIBUTO 'addfieldpath' QUE FARÁ A REFERÊNCIA DOS CAMPOS PERSONALIZADOS.-->
	<fields name="request" addfieldpath="/administrator/components/com_helloworld/models/fields">
		<fieldset name="request">
			
			<!--INFORMAR O CAMPO E SEUS PARÂMETROS-->
			<!--ESSE CAMPO ESTÁ SENDO RECONHECIDO PELA TAG 'name' COMO 'opcao', ISSO SERVIRÁ PARA PEGAR O VALOR DO CAMPO NO MODELO-->
			<!--ESSE CAMPO ESTARÁ VISÍVEL NO TIPO DE ITEM DE MENU DA VIEW 'HelloWorld'-->
			<!--AS PALAVRAS EM MAIÚSCULO SÃO CONSTANTES QUE SERÃO TRADUZIDAS PELO ARQUIVO DE TRADUÇÃO.-->
			<field
				name="opcao"
				type="mensagens"
				label="COM_HELLOWORLD_HELLOWORLD_FIELD_TEXTO_LABEL"
				description="COM_HELLOWORLD_HELLOWORLD_FIELD_TEXTO_DESC"
				default="1" />

		</fieldset>
	</fields>

</metadata>
